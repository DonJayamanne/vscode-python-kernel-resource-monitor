{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["ES2020", "ES2022", "dom"],
        "declaration": false,
        "sourceMap": true,
        "strict": true,
        "jsx": "react",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "preserveWatchOutput": true
    },
    "exclude": ["node_modules", ".vscode-test"]
}
